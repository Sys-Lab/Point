<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".point">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/imageView"
        android:background="@drawable/build"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Spinner
        android:layout_width="55pt"
        android:layout_height="30dp"
        android:id="@+id/spinner"
        android:background="#148372"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="55pt"
        android:layout_height="30dp"
        android:id="@+id/spinner2"
        android:background="#148372"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/spinner"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20pt"
        android:layout_height="30dp"
android:background="@drawable/checked"


        android:layout_alignParentRight="true"
        android:id="@+id/button"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ListView

        android:layout_width="wrap_content"
        android:layout_height="320dp"

        android:id="@+id/listView"
        android:cacheColorHint="#148372"
android:background="@drawable/xiao"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginBottom="26dp" />




</RelativeLayout>
